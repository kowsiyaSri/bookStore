<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FinalProject.AddNewBookController">
    <stylesheets>
        <URL value="@addnewbook.css"/>
    </stylesheets>
    <Label text="Book Name:"/>
    <TextField minWidth="50" minHeight="10" GridPane.columnIndex="1"/>
    <Label text="Purchase Price:" GridPane.rowIndex="1"/>
    <TextField minWidth="50" minHeight="10" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label text="Author:" GridPane.rowIndex="2"/>
    <TextField minWidth="50" minHeight="10" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button text="Add" GridPane.rowIndex="3" onAction="#onAdd"/>
    <Button fx:id="btnExit" text="Exit" GridPane.rowIndex="3" GridPane.columnIndex="1" onAction="#onExit"/>
    <Label fx:id="lblDisplay" GridPane.rowIndex="4"/>    
</GridPane>
