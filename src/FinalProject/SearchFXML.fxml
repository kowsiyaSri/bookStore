<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane id="border" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="FinalProject.SearchFXMLController">
    <stylesheets>
        <URL value="@searchfxml.css" />
    </stylesheets>
    <center>
        <GridPane alignment="center" hgap="10" vgap="10">
            <Label prefWidth="120.0" text="Search Title" />
            <TextField fx:id="txtSearch" GridPane.columnIndex="1" />
            <Button onAction="#onEnter" prefWidth="120.0" text="Enter" GridPane.columnIndex="2" />
            <Label fx:id="lblDisplay" GridPane.columnSpan="3" GridPane.rowIndex="1" />
            <Button fx:id="btnExit" onAction="#onExit" prefWidth="120.0" text="Exit" GridPane.rowIndex="2" />
            <Button fx:id="btnClear" onAction="#onClear" prefWidth="120.0" text="Clear" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label fx:id="lblStatus" GridPane.columnSpan="3" GridPane.rowIndex="3" />
        
        </GridPane>
    </center>
</BorderPane>
