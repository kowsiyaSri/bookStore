<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane id="border" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FinalProject.MainScreenController">
    <stylesheets>
        <URL value="@mainscreen.css" />
    </stylesheets>
    <center>
        <GridPane alignment="center" hgap="10" styleClass="mainFxmlClass" vgap="10">
        <Label text="Title:" GridPane.rowIndex="2" />
        <TextField fx:id="txtTitle" minHeight="10" minWidth="50" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" />
        <Label text="Purchase Price:" GridPane.rowIndex="3" />
        <TextField fx:id="txtPrice" minHeight="10" minWidth="50" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3" />
        <Label text="First Name:" GridPane.rowIndex="4" />
        <TextField fx:id="txtFirstName" minHeight="10" minWidth="50" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="4" />
        <Label text="Last Name:" GridPane.rowIndex="5" />
        <TextField fx:id="txtLastName" minHeight="10" minWidth="50" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="5" />
        <Button onAction="#onAdd" prefHeight="27.0" prefWidth="120.0" text="Add" GridPane.rowIndex="6" /> 
        <Button onAction="#onClear" prefWidth="120.0" text="Clear" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        <Button onAction="#onDisplay" prefWidth="120.0" text="Display Books" GridPane.columnIndex="2" GridPane.rowIndex="6" />
        <Button onAction="#onDelete" prefHeight="27.0" prefWidth="120.0" text="Delete" GridPane.rowIndex="7" />
        <Button onAction="#onSearch" prefWidth="120.0" text="Search" GridPane.columnIndex="1" GridPane.rowIndex="7" />
        <Button onAction="#onUpdate" prefWidth="120.0" text="Update" GridPane.columnIndex="2" GridPane.rowIndex="7" />
        <ListView fx:id="lvDisplay" onMouseClicked="#onSelection" prefHeight="350.0" GridPane.columnSpan="3" GridPane.rowIndex="8" />    
        <Label fx:id="lblStatus" GridPane.columnSpan="3" GridPane.rowIndex="10" />
        <Button fx:id="btnExit" onAction="#onExit" prefWidth="120.0" text="Exit" GridPane.rowIndex="11" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
       
       
        </GridPane>
    </center>

</BorderPane>
